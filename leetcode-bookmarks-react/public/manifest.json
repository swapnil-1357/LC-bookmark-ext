{
  "manifest_version": 3,
  "name": "LC Problem Tracker",
  "version": "0.1",
  "author": "Swapnil Mal",
  "description": "A Chrome extension to bookmark and track important LeetCode problems.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/save.png",
        "assets/bookmark.png",
        "assets/edit.png",
        "assets/delete.png",
        "assets/play.png",
        "assets/copy.png",
        "assets/note.png"
      ],
      "matches": [
        "https://leetcode.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/ext-icon.png",
      "24": "icons/ext-icon.png",
      "32": "icons/ext-icon.png"
    },
    "default_popup": "public/index.html",
    "default_title": "LC Problem Tracker"
  }
}