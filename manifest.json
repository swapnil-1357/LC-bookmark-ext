{
  "manifest_version": 3,
  "name": "LC Problem Tracker",
  "version": "0.1",
  "author": "Swapnil Mal",
  "description": "A chrome extension to store the important AZ question to book mark",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"


  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/save.png",
        "assets/bookmark.png",
        "assets/edit.png",
        "assets/delete.png",
        "assets/play.png",
        "assets/copy.png",
        "assets/note.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "LC Problem Tracker"
  }
}